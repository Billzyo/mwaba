{
    "name": "mwaba/farm-monitoring",
    "description": "Real-time Farm Monitoring System with WebSocket support",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mwaba Farm Team",
            "email": "admin@mwabafarm.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ratchet/pawl": "^0.4",
        "ratchet/rfc6455": "^0.3",
        "react/socket": "^1.12",
        "react/http": "^1.8",
        "react/event-loop": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "start-websocket": "php websocket-server.php",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true
    }
}
